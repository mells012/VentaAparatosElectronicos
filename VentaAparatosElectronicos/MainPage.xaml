<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VentaAparatosElectronicos.MainPage"
             Title="Menú Principal">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15">
            <Label x:Name="saludoLabel"
                   FontSize="20"
                   FontAttributes="Bold" />

            <Button Text="Inventario"
                    Clicked="OnInventarioClicked" />

            <Button Text="Trabajadores"
                    Clicked="OnTrabajadoresClicked" />

            <Button Text="Clientes"
                    Clicked="OnClientesClicked" />

            <Button Text="Facturas"
                    Clicked="OnFacturasClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
