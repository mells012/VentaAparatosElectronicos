<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VentaAparatosElectronicos.ClientesPage"
             Title="Clientes">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Clientes"
                   FontAttributes="Bold"
                   FontSize="20" />

            <ListView x:Name="clientesListView"
                      ItemSelected="OnItemSelected"
                      HeightRequest="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}"
                                  Detail="{Binding Email}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Entry x:Name="nombreEntry" Placeholder="Nombre del cliente" />
            <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="Agregar" Clicked="OnAgregarClicked" />
                <Button Text="Eliminar seleccionado" Clicked="OnEliminarClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
