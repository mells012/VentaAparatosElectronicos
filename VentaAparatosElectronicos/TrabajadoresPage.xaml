<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VentaAparatosElectronicos.TrabajadoresPage"
             Title="Trabajadores">

    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Trabajadores"
                   FontAttributes="Bold"
                   FontSize="20" />

            <ListView x:Name="trabajadoresListView"
                      ItemSelected="OnItemSelected"
                      HeightRequest="200">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}"
                                  Detail="{Binding Puesto}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Entry x:Name="nombreEntry" Placeholder="Nombre del trabajador" />
            <Entry x:Name="puestoEntry" Placeholder="Puesto" />

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="Agregar" Clicked="OnAgregarClicked" />
                <Button Text="Eliminar seleccionado" Clicked="OnEliminarClicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
